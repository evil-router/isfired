
CREATE SCHEMA Fired;


create table Fired.site
(
  Site_ID bigint       not null,
  Name    varchar(100) not null,
  Site    varchar(40)  not null,
  PK_ID   bigint auto_increment
    primary key,
  constraint site_Site_uindex
  unique (Site)
);



create table Fired.comment
(
  PK_comment_ID bigint                             not null
    primary key,
  FK_Site_ID    bigint                             null,
  message       varchar(400)                       not null,
  time          datetime default CURRENT_TIMESTAMP null,
  location      varchar(30) default ''             null,
  Status        tinyint(1) default '1'             null
);

create index comment_FK_PK_site_ID_index
  on Fired.comment (FK_Site_ID);


create index comment_FK_PK_site_ID_index
  on Fired.comment (FK_PK_site_ID);


